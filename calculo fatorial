algoritmo "ContagemFatorial"
// Função :
// Autor :
// Data : 11/06/2021
// Seção de Declarações 
var
   N, C, F: Inteiro
   R: Caractere
inicio
   Repita
      Escreva ("Digite um numero: ")
      Leia (N)
      C <- N
      F <- 1
      Repita
            F <- F * C
            C <- C - 1
      Ate (C < 1)
      Escreval ("O valor fatorial de ", N, " e ", F)
      Escreva ("Deseja repetir? [S/N] ")
      Leia (R)
      LimpaTela
   Ate (R = "N")
// Seção de Comandos 
fimalgoritmo
